  <script>
    $(document).ready(function () {
      fetchServices();

      $('#service-form').on('submit', function (e) {
        e.preventDefault();
        const data = {
          nome: $('#nome').val(),
          descricao: $('#descricao').val(),
          valor: $('#valor').val()
        };

        $.ajax({
          url: '/api/servicos',
          type: 'POST',
          data: data,
          success: function (response) {
            alert('Serviço cadastrado com sucesso!');
            $('#service-form')[0].reset();
            fetchServices();
          },
          error: function (xhr) {
            alert('Erro ao cadastrar serviço: ' + xhr.responseText);
          }
        });
      });

      function fetchServices() {
        $.get('/api/servicos', function (data) {
          $('#service-list').empty();
          data.forEach(service => {
            $('#service-list').append(`<li class="list-group-item">${service.nome} - ${service.descricao} - R$${service.valor}</li>`);
          });
        });
      }
    });
  </script>
